import java.util.Scanner;
public class TTT {
    static char[][] board = new char[3][3];
    public static void printBoard(){
        System.out.println("    0   1   2");
        System.out.println("  -------------");
        for (int i=0;i<3;i++) {
            System.out.print(i+" | ");
            for (int j=0;j<3;j++) {
                System.out.print(board[i][j]+" | ");
            }
            System.out.println();
            System.out.println("  -------------");
        }
    }
    public static boolean checkWinner(char p){
        for (int i=0;i<3;i++){
            if ((board[i][0]==p&&board[i][1]==p&&board[i][2]==p)||(board[0][i]==p&&board[1][i]==p&&board[2][i]==p))
                return true;
        }
        if((board[0][0]==p&&board[1][1]==p&&board[2][2]==p)||
            (board[0][2]==p &&board[1][1]==p&&board[2][0]==p))
            return true;
        return false;
    }
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        boolean play = true;
        System.out.println("><><><><><><><><><><><><><><><><><><");
        System.out.println(":::Tic Tac Toe Game:::");
        System.out.println("Player 1=X, Player 2=O");
        System.out.println("Enter row and column (0-2 only)");
        System.out.println("><><><><><><><><><><><><><><><><><><");
        System.out.print("Enter name of Player 1: ");
        String p1=sc.nextLine();
        System.out.print("Enter name of Player 2: ");
        String p2=sc.nextLine();
        while (play){
            for (int i=0;i<3;i++)
                for (int j=0;j<3;j++)
                    board[i][j]=' ';
            char pl='X';
            boolean over=false;
            while (!over) {
                printBoard();
                String current=(pl=='X')?p1:p2;
                System.out.println(current+" ("+pl+") turn (row col):");
                int r,c;
                while (true) {
                    r=sc.nextInt();
                    c=sc.nextInt();
                    if (r<0||r>2||c<0||c>2)
                        System.out.println("Invalid position!");
                    else if (board[r][c]!=' ')
                        System.out.println("Cell occupied!");
                    else
                        break;
                }
                board[r][c] = pl;
                if (checkWinner(pl)){
                    printBoard();
                    String winner=(pl=='X')?p1:p2;
                    System.out.println(winner+" ("+pl+") wins!");
                    over= true;
                }
                else{
                    boolean full=true;
                    for (int i=0;i<3;i++)
                        for (int j=0;j<3;j++)
                            if (board[i][j]==' ')
                                full=false;
                    if (full){
                        printBoard();
                        System.out.println("---->Draw<----");
                        over = true;
                    } else {
                        pl=(pl=='X')?'O':'X';
                    }
                }
            }
            System.out.print("Play again? (y/n): ");
            play= sc.next().toLowerCase().charAt(0)=='y';
            sc.nextLine();
        }
        sc.close();
    }
}import java.util.Scanner;
public class TTT {
    static char[][] board = new char[3][3];
    public static void printBoard(){
        System.out.println("    0   1   2");
        System.out.println("  -------------");
        for (int i=0;i<3;i++) {
            System.out.print(i+" | ");
            for (int j=0;j<3;j++) {
                System.out.print(board[i][j]+" | ");
            }
            System.out.println();
            System.out.println("  -------------");
        }
    }
    public static boolean checkWinner(char p){
        for (int i=0;i<3;i++){
            if ((board[i][0]==p&&board[i][1]==p&&board[i][2]==p)||(board[0][i]==p&&board[1][i]==p&&board[2][i]==p))
                return true;
        }
        if((board[0][0]==p&&board[1][1]==p&&board[2][2]==p)||
            (board[0][2]==p &&board[1][1]==p&&board[2][0]==p))
            return true;
        return false;
    }
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        boolean play = true;
        System.out.println("><><><><><><><><><><><><><><><><><><");
        System.out.println(":::Tic Tac Toe Game:::");
        System.out.println("Player 1=X, Player 2=O");
        System.out.println("Enter row and column (0-2 only)");
        System.out.println("><><><><><><><><><><><><><><><><><><");
        System.out.print("Enter name of Player 1: ");
        String p1=sc.nextLine();
        System.out.print("Enter name of Player 2: ");
        String p2=sc.nextLine();
        while (play){
            for (int i=0;i<3;i++)
                for (int j=0;j<3;j++)
                    board[i][j]=' ';
            char pl='X';
            boolean over=false;
            while (!over) {
                printBoard();
                String current=(pl=='X')?p1:p2;
                System.out.println(current+" ("+pl+") turn (row col):");
                int r,c;
                while (true) {
                    r=sc.nextInt();
                    c=sc.nextInt();
                    if (r<0||r>2||c<0||c>2)
                        System.out.println("Invalid position!");
                    else if (board[r][c]!=' ')
                        System.out.println("Cell occupied!");
                    else
                        break;
                }
                board[r][c] = pl;
                if (checkWinner(pl)){
                    printBoard();
                    String winner=(pl=='X')?p1:p2;
                    System.out.println(winner+" ("+pl+") wins!");
                    over= true;
                }
                else{
                    boolean full=true;
                    for (int i=0;i<3;i++)
                        for (int j=0;j<3;j++)
                            if (board[i][j]==' ')
                                full=false;
                    if (full){
                        printBoard();
                        System.out.println("---->Draw<----");
                        over = true;
                    } else {
                        pl=(pl=='X')?'O':'X';
                    }
                }
            }
            System.out.print("Play again? (y/n): ");
            play= sc.next().toLowerCase().charAt(0)=='y';
            sc.nextLine();
        }
        sc.close();
    }
}
